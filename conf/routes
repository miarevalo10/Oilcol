# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#Servicios Campos
GET     /campos                                             controllers.CampoController.getCampos()
GET     /campos/:id                                         controllers.CampoController.getCampo(id : Long)
POST    /campos                                             controllers.CampoController.createCampo()
DELETE  /campos/:id                                         controllers.CampoController.deleteCampo(id : Long)
PUT     /campos/:id                                         controllers.CampoController.updateCampo(id : Long)

#Servicios Pozos
GET     /campos/:idCampo/pozos                              controllers.PozoController.getPozos(idCampo : Long)
GET     /campos/:idCampo/pozos/:id                          controllers.PozoController.getPozo(idCampo : Long, id : Long)
POST    /campos/:idCampo/pozos                              controllers.PozoController.createPozo(idCampo : Long)
DELETE  /campos/:idCampo/pozos/:id                          controllers.PozoController.deletePozo(idCampo : Long, id: Long)
PUT     /campos/:idCampo/pozos/:id                          controllers.PozoController.updatePozo(idCampo : Long, id : Long)

#Servicios Sensores
GET     /campos/:idCampo/pozos/:idPozo/sensores             controllers.SensorController.getSensores(idCampo : Long, idPozo : Long)
GET     /campos/:idCampo/pozos/:idPozo/sensores/:id         controllers.SensorController.getSensor(idCampo : Long, idPozo : Long, id : Long)
POST    /campos/:idCampo/pozos/:idPozo/sensores             controllers.SensorController.createSensor(idCampo : Long, idPozo : Long)
DELETE  /campos/:idCampo/pozos/:idPozo/sensores/:id         controllers.SensorController.deleteSensor(idCampo: Long, idPozo : Long, id : Long)
PUT     /campos/:idCampo/pozos/:idPozo/sensores/:id         controllers.SensorController.updateSensor(idCampo : Long, idPozo : Long, id : Long)


# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#Servicios Campos
GET     /campo                              controllers.CampoController.getCampos()
GET     /campo/:id                          controllers.CampoController.getCampo(id : Long)
POST    /campo                              controllers.CampoController.createCampo()
DELETE  /campo/:id                          controllers.CampoController.deleteCampo(id : Long)
PUT     /campo/:id                          controllers.CampoController.updateCampo(id : Long)

#Servicios Pozos
GET     /campo/:idCampo/pozos               controllers.PozoController.getPozos(idCampo : Long)
GET     /pozo/:id                           controllers.PozoController.getPozo(id : Long)
POST    /pozo                               controllers.PozoController.createPozo(idCampo : Long)
DELETE  /pozo/:id                           controllers.PozoController.deletePozo(idCampo : Long, id: Long)
PUT     /pozo/:id                           controllers.PozoController.updatePozo(idCampo : Long, id : Long)

#Servicios Sensores
GET     /pozos/:idPozo/sensores             controllers.SensorController.getSensores(idCampo : Long, idPozo : Long)
GET     /sensores/:id                       controllers.SensorController.getSensor(idCampo : Long, idPozo : Long, id : Long)
POST    /sensores                           controllers.SensorController.createSensor(idCampo : Long, idPozo : Long)
DELETE  /sensores/:id                       controllers.SensorController.deleteSensor(idCampo: Long, idPozo : Long, id : Long)
PUT     /sensores/:id                       controllers.SensorController.updateSensor(idCampo : Long, idPozo : Long, id : Long)

